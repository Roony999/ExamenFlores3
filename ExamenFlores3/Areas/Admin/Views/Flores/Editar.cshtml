@model ExamenFlores3.Areas.Admin.Models.AgregarViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "AdminLayout";
}


<div id="center">
    <div id="content">
        <form method="post" action="~/admin/flores/editar" enctype="multipart/form-data">
            <h2 class="titulo">Editar una flor</h2>
            <br />
            <div class="entrada">
				<input type="hidden" asp-for="Id" />
                <label>Nombre:</label><input type="text" id="txtNombre" asp-for="Nombre" /><br />
                <label>Origen:</label><input type="text" id="txtOrigen" asp-for="Origen" /><br />
                <label>Descripción:</label><textarea rows="5" cols="20" asp-for="Descripcion" id="txtDescripción" style="width:100%;">
</textarea><br />
                <input type="file" accept=".jpg, .jpeg" asp-for="Imagen" /><br />
                <img src="~/images/@(Model.Id).jpg" alt="@Model.Nombre" width="250" height="250" />
				<br />
                <input type="submit" value="Guardar Flor" />
                <a href="~/admin"><input type="button" value="Cancelar" /></a>
                <div class="errores">
                    @Html.ValidationSummary(true)
                </div>
            </div>

        </form>
    </div>
</div>